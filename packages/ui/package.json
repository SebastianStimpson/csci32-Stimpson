{
  "name": "@repo/ui",
  "version": "1.0.0",
  "private": false,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/index.css",
    "./button": {
      "import": "./dist/button.js",
      "require": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./size": {
      "import": "./dist/size.js",
      "require": "./dist/size.js",
      "types": "./dist/size.d.ts"
    },
    "./variant": {
      "import": "./dist/variant.js",
      "require": "./dist/variant.js",
      "types": "./dist/variant.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "lint": "eslint src/",
    "dev": "tsc -w & tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
